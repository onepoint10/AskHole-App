#!/bin/bash
#
# Environment variables setup for Telegram Password Recovery
# Copy this file to .env.local and fill in your values
#

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================

# Your Telegram Bot Token from @BotFather
# Get it by:
#   1. Open Telegram and search for @BotFather
#   2. Send /newbot command
#   3. Follow the instructions
#   4. Copy the token provided
export TELEGRAM_BOT_TOKEN="123456789:ABCdefGHIjklMNOpqrsTUVwxyz"

# Webhook secret for internal security
# Generate a secure random secret:
#   openssl rand -hex 32
export TELEGRAM_WEBHOOK_SECRET="your-secure-random-secret-here"

# Frontend URL for password reset links
# Development: http://localhost:5173
# Production: https://yourdomain.com
export FRONTEND_URL="http://localhost:5173"

# =============================================================================
# FLASK CONFIGURATION (already configured in main.py)
# =============================================================================

# Flask secret key (already set in main.py, but you can override)
# export SECRET_KEY='your-secret-key-here'

# =============================================================================
# USAGE
# =============================================================================

# Option 1: Source this file before running Flask
#   source .env.local
#   python backend/src/main.py

# Option 2: Add to your shell profile (~/.bashrc or ~/.zshrc)
#   source /path/to/AskHole-App/.env.local

# Option 3: Use with systemd service
#   EnvironmentFile=/path/to/AskHole-App/.env.local

# =============================================================================
# SECURITY NOTES
# =============================================================================

# - Never commit .env.local to version control
# - Use different values for development and production
# - Rotate TELEGRAM_WEBHOOK_SECRET regularly
# - Keep TELEGRAM_BOT_TOKEN secure and private

echo "Environment variables loaded successfully!"
echo "TELEGRAM_BOT_TOKEN: ${TELEGRAM_BOT_TOKEN:0:10}..."
echo "TELEGRAM_WEBHOOK_SECRET: ${TELEGRAM_WEBHOOK_SECRET:0:10}..."
echo "FRONTEND_URL: $FRONTEND_URL"
